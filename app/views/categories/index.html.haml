.row
  .col-sm-12
    %h1 Categories
    %ul
      - @categories.each do |category|
        %li 
          %h3.inline_block= link_to category, category
          - if can? :edit, category
            = link_to edit_category_path(category) do
              %i.glyphicon.glyphicon-pencil
          - if can? :destroy, category
            = link_to category, :method => :delete, :data => { :confirm => 'Are you sure?' } do
              %i.glyphicon.glyphicon-trash
      - if can? :create, Category
        %li
          = link_to '+ Category', new_category_path, class: 'btn btn-default btn-xs'
